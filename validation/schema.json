{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": [
		"sections",
		"cases",
		"java"
	],
	"additionalProperties": false,
	"properties": {
		"sections": {
			"type": "object",
			"required": [
				"A",
				"B"
			],
			"additionalProperties": true,
			"properties": {
				"A": {
					"type": "string",
					"minLength": 1
				},
				"B": {
					"type": "string",
					"minLength": 1
				},
				"C": {
					"type": "string"
				}
			}
		},
		"cases": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": [
					"id",
					"category",
					"priority",
					"preconditions",
					"steps",
					"expected",
					"evidence"
				],
				"additionalProperties": false,
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^TC-\\d{3}$"
					},
					"category": {
						"type": "string",
						"enum": [
							"正常系",
							"異常系",
							"境界値",
							"セキュリティ"
						]
					},
					"priority": {
						"type": "string",
						"enum": [
							"高",
							"中",
							"低"
						]
					},
					"preconditions": {
						"type": "string",
						"minLength": 1
					},
					"steps": {
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"expected": {
						"type": "string",
						"minLength": 1
					},
					"evidence": {
						"type": "string",
						"minLength": 1
					}
				}
			}
		},
		"java": {
			"type": "object",
			"required": [
				"code",
				"testCount"
			],
			"additionalProperties": false,
			"properties": {
				"code": {
					"type": "string",
					"minLength": 50
				},
				"testCount": {
					"type": "integer",
					"minimum": 1
				}
			}
		}
	}
}